<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Traitement_Compte_Activity"
    android:background="@drawable/arrier_plan">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom"
            android:layout_marginTop="50dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/prenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prenom"
            android:inputType="text"/>

        <EditText
            android:id="@+id/adr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adresse" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"/>


        <EditText
            android:id="@+id/N_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero de Telephone"
            android:inputType="phone"/>

        <Button
            android:id="@+id/B_suivat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="B_confermer"
            android:text="Suivant" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/Remarque_compte"
            android:textColor="@color/red"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ok"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:onClick="B_ok"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>